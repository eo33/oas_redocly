  "author": "team@redocly.com",
  "keywords": [
    "Redocly",
    "GraphQL",
    "API",
    "Docs"
  ],
  "main": "lib/src/index.js",
  "module": "lib-esm/src/index.js",
  "typings": "lib/src/index.d.ts",
  "dependencies": {
    "deepmerge": "^4.2.2",
    "marked": "^4.0.15",
    "@redocly/config": "0.18.0"
  },
  "peerDependencies": {
    "@redocly/theme": "^0.46.0",
    "graphql": "^16.9.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0",
    "react-router-dom": "^6.21.1",
    "styled-components": "^5.3.11"
  },
  "devDependencies": {
    "@redocly/theme": ">=0.46.0",
    "@shikijs/transformers": "^1.22.2",
    "@testing-library/jest-dom": "6.1.5",
    "@testing-library/react": "14.1.2",
    "@types/jest": "29.5.11",
    "@types/jest-when": "3.5.5",
    "@types/marked": "4.3.2",
    "@types/node": "18.19.3",
    "@types/react": "18.3.9",
    "@types/react-dom": "18.2.25",
    "@types/react-router": "5.1.20",
    "@types/styled-components": "5.1.34",
    "concurrently": "7.6.0",
    "esbuild-minify-dir": "*",
    "graphql": "16.9.0",
    "jest": "29.5.0",
    "jest-fetch-mock": "3.0.3",
    "jest-styled-components": "7.2.0",
    "jest-when": "3.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-is": "18.2.0",
    "react-router-dom": "6.21.1",
    "rimraf": "5.0.7",
    "shiki": "^1.22.2",
    "styled-components": "5.3.11",
    "ts-jest": "29.1.2",
    "tsc-alias": "1.8.10",
    "typescript": "5.6.2"
  },
  "scripts": {
    "start": "npm run copy-highlight-hook && cd playground && npm start",
    "test": "jest",
    "test:update": "jest -u",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:html": "jest --coverage --coverageReporters html",
    "ts:check": "tsc --noEmit --skipLibCheck",
    "watch": "tsc -p tsconfig.build.json && (concurrently \"tsc -w -p tsconfig.build.json\" \"tsc-alias -w -p tsconfig.build.json\")",
    "compile": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "compile-esm": "tsc -p tsconfig.esm.json && tsc-alias -p tsconfig.esm.json",
    "clean": "rimraf lib lib-esm",
    "build:minify": "esbuild-minify-dir lib --cjs",
    "build:minify-esm": "esbuild-minify-dir lib-esm",
    "build": "npm run clean && npm run compile && npm run compile-esm && npm run build:minify && npm run build:minify-esm",
    "copy-highlight-hook": "cp -r ../portal/src/client/app/hooks/codeHighlight ./playground/src/hooks"
  }
}